 }
 
+static uint32_t mba(const uint8_t* data, size_t len, uint32_t sum)
+{
+    size_t i = len/2;
+    uint32_t inchar;
+    while (i--)
+    {
+        sscanf((const char *)data+(2*i), "%2X", &inchar);
+        sum += inchar;
+    }
+    return sum;
+}
